<% if flash.any? %>
  <div class="flash-messages" style="margin-bottom: 20px;">
    <% flash.each do |type, msg| %>
      <div class="flash <%= type %>" style="
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 5px;
        background-color: <%= type == 'notice' ? '#d4edda' : '#f8d7da' %>;
        color: <%= type == 'notice' ? '#155724' : '#721c24' %>;
        border: 1px solid <%= type == 'notice' ? '#c3e6cb' : '#f5c6cb' %>;
      ">
        <%= msg %>
      </div>
    <% end %>
  </div>
<% end %>