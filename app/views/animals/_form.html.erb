<%= form_with(model: animal, local: true) do |form| %>
  <% if animal.errors.any? %>
    <div style="
      background-color: #f8d7da;
      color: #721c24;
      padding: 20px;
      margin-bottom: 20px;
      border-radius: 5px;
      border: 1px solid #f5c6cb;
    ">
      <h2 style="margin-top: 0; font-size: 18px;">
        <%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:
      </h2>
      <ul style="margin: 10px 0 0 20px;">
        <% animal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :name, style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.text_field :name, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    " %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :species, style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.text_field :species, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    " %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :breed, style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.text_field :breed, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    " %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :age, style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.number_field :age, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    " %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :intake_date, "Intake Date", style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.date_field :intake_date, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      box-sizing: border-box;
    " %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :adopted, style: "display: flex; align-items: center; font-weight: bold; color: #2c3e50; cursor: pointer;" do %>
      <%= form.check_box :adopted, style: "margin-right: 8px; width: 18px; height: 18px; cursor: pointer;" %>
      <span>Adopted</span>
    <% end %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :notes, style: "display: block; font-weight: bold; margin-bottom: 5px; color: #2c3e50;" %>
    <%= form.text_area :notes, rows: 5, style: "
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
      font-family: inherit;
      box-sizing: border-box;
    " %>
  </div>

  <div style="display: flex; gap: 10px;">
    <%= form.submit style: "
      background-color: #27ae60;
      color: white;
      padding: 12px 30px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
    " %>
    
    <%= link_to "Cancel", animals_path, style: "
      background-color: #95a5a6;
      color: white;
      padding: 12px 30px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      display: inline-block;
      text-align: center;
    " %>
  </div>
<% end %>